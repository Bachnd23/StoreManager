@model List<COCOApp.Models.ExportOrder>
@{
    Layout = "_LayoutStoreDashBoard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <!-- Other CSS styles for invoice layout -->
    <style>
        /* CSS for invoice layout */
        body {
            background-color: #f8f9fa;
        }

        .invoice-header {
            margin-top: 20px;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 10px;
        }

            .invoice-header h1 {
                font-size: 2.5rem;
                font-weight: 700;
            }

        .invoice-details {
            margin-top: 20px;
        }

        .invoice-footer {
            margin-top: 40px;
            border-top: 1px solid #dee2e6;
            padding-top: 10px;
        }

        .signature-field {
            margin-top: 60px;
            text-align: right;
        }

            .signature-field .signature-line {
                display: inline-block;
                width: 200px;
                border-top: 1px solid #000;
                margin-top: 50px;
            }

            .signature-field p {
                margin-bottom: 0;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .table thead th {
            background-color: #343a40;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row invoice-header">
            <div class="col-md-6">
                <h1>Hóa đơn</h1>
                <p><strong>Khách hàng:</strong> @Model[0].Customer.Name</p>
            </div>
            <div class="col-md-6 text-right">
                <p><strong>Ngày lập:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
                <p><strong>Mã Hóa đơn:</strong> INV-@Model[0].Id</p>
            </div>
        </div>
        <div class="row invoice-details">
            <div class="col-md-12">
                <table class="table table-striped w-100">
                    <thead>
                        <tr>
                            <th scope="col">Mã đơn hàng</th>
                            <th scope="col">Sản phẩm</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Ngày đặt</th>
                            <th scope="col">Tổng tiền đơn hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
@*                                 <td>@order.Product.ProductName</td>
                                <td>@order.Volume</td>
                                <td>@order.OrderProductCost.ToString("C")</td> *@
                                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                <td>@order.OrderTotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row invoice-footer">
            <div class="col-md-12 text-right">
                <p><strong>Tổng tiền hóa đơn:</strong> @ViewBag.totalCost.ToString("C") VND</p>
                <button type="button" onclick="window.print()" class="btn btn-primary">In hóa đơn</button>
            </div>
        </div>
        <div class="row signature-field">
            <div class="col-md-12 text-right">
                <p>Người lập hóa đơn</p>
                <div class="signature-line"></div>
            </div>
        </div>
    </div>
</body>
</html>
