@page
@{
    Layout = "_Layout";
}

<div class="container-xxl position-relative bg-white d-flex p-0">
    <!-- Sign In Start -->
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <form action="#" method="post">
                    <div class="bg-light rounded p-4 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h3 class="text-primary">
                                <img alt="" src="img/logo.png" width="100" height="100">
                            </h3>
                            <h3>COCO</h3>
                        </div>
                        <div class="mb-3">
                            <label for="floatingInput">Tên đăng nhập</label>
                            <input type="text" name="username" class="form-control" id="floatingInput" required>
                        </div>
                        <label for="floatingPassword">Mật khẩu</label>
                        <div class="input-group mb-4" id="show_hide_password">
                            <input type="password" class="form-control" id="floatingPassword" required>
                            <div class="input-group-addon">
                                <a href="#" class="h-100 input-group-text" id="togglePassword">
                                    <i class="fas fa-eye-slash" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                        <label for="confirmPassword">Xác nhận mật khẩu</label>
                        <div class="input-group mb-4" id="show_hide_confirm_password">
                            <input type="password" class="form-control" id="confirmPassword" required>
                            <div class="input-group-addon">
                                <a href="#" class="h-100 input-group-text" id="toggleConfirmPassword">
                                    <i class="fas fa-eye-slash" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="floatingInput">Điện thoại</label>
                            <input type="text" class="form-control" id="phoneNumber" required>
                        </div>
                        <div class="mb-3">
                            <label for="floatingInput">Địa chỉ</label>
                            <input type="text" class="form-control" id="address" required>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <a href="#">Quên mật khẩu</a>
                            <a href="#">Đăng nhập</a>
                        </div>
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Đăng ký</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Sign In End -->
@section Scripts {
    <script>
        $(document).ready(function () {

            $("#togglePassword").on('click', function (event) {
                event.preventDefault();
                var passwordField = $('#floatingPassword');
                var icon = $(this).find('i');
                if (passwordField.attr("type") == "text") {
                    passwordField.attr('type', 'password');
                    icon.addClass("fa-eye-slash").removeClass("fa-eye");
                } else if (passwordField.attr("type") == "password") {
                    passwordField.attr('type', 'text');
                    icon.addClass("fa-eye").removeClass("fa-eye-slash");
                }
            });

            $("#toggleConfirmPassword").on('click', function (event) {
                event.preventDefault();
                var confirmPasswordField = $('#confirmPassword');
                var icon = $(this).find('i');
                if (confirmPasswordField.attr("type") == "text") {
                    confirmPasswordField.attr('type', 'password');
                    icon.addClass("fa-eye-slash").removeClass("fa-eye");
                } else if (confirmPasswordField.attr("type") == "password") {
                    confirmPasswordField.attr('type', 'text');
                    icon.addClass("fa-eye").removeClass("fa-eye-slash");
                }
            });
        });
    </script>
}
