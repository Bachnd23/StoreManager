@model List<COCOApp.Models.Order>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm mới đơn hàng</title>
    <style>
        .form-group {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Order" asp-action="ViewList">Danh sách đơn hàng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thêm mới đơn hàng</li>
            </ol>
        </nav>
        <form asp-controller="Order" asp-action="AddOrders" method="post">
            <div class="row bg-light rounded h-100 p-4">
                <div>
                    <h4 class="mb-4">Thêm mới đơn hàng</h4>
                </div>
                <!-- Top input fields for Khách hàng and Ngày đặt -->
                <div class="col-12 mb-3">
                    <div class="bg-light rounded h-100 p-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="topSelectCustomer" class="form-label required">Chọn khách hàng</label>
                                    <select id="topSelectCustomer" class="form-control select2">
                                        <option value="">Chọn khách hàng...</option>
                                        @foreach (var customer in ViewBag.Customers)
                                        {
                                            <option value="@customer.Value">@customer.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="topSelectOrderDate" class="form-label required">Chọn Ngày đặt</label>
                                    <input type="date" class="form-control" id="topSelectOrderDate">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="order-rows">
                    <div class="order-row">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="bg-light rounded h-100 p-4">
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="selectCustomer" class="form-label required">Chọn khách hàng</label>
                                            <input type="text" list="customersList" class="form-control" asp-for="@Model[0].CustomerId" placeholder="Chọn khách hàng...">
                                            <datalist id="customersList">
                                                @foreach (var customer in ViewBag.Customers)
                                                {
                                                    <option value="@customer.Value">@customer.Text</option>
                                                }
                                            </datalist>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label asp-for="@Model[0].ProductId" class="form-label">Chọn mặt hàng</label>
                                            <input type="text" list="productsList" class="form-control" asp-for="@Model[0].ProductId" placeholder="Chọn mặt hàng...">
                                            <datalist id="productsList">
                                                @foreach (var product in ViewBag.Products)
                                                {
                                                    <option value="@product.Value">@product.Text</option>
                                                }
                                            </datalist>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="bg-light rounded h-100 p-4">
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label asp-for="@Model[0].Volume" class="form-label">Số lượng</label>
                                            <input asp-for="@Model[0].Volume" class="form-control" />
                                            <span asp-validation-for="@Model[0].Volume" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label asp-for="@Model[0].Date" class="form-label">Ngày đặt</label>
                                            <input asp-for="@Model[0].Date" class="form-control" />
                                            <span asp-validation-for="@Model[0].Date" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="button" class="btn btn-danger remove-order-row">Xóa</button>
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="col">
                    <div class="bg-light rounded h-100 p-4 align-items-center">
                        <button type="button" class="btn btn-secondary" id="add-order-row">Thêm đơn hàng mới</button>
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- Content End -->
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.select2').select2({
                    allowClear: true // Optional: Add this if you want a clear button
                });
                var orderIndex = 1;

                $('#add-order-row').click(function () {
                    var newOrderRow = $('.order-row:first').clone();
                    newOrderRow.find('input, select').each(function () {
                        var name = $(this).attr('name');
                        if (name) {
                            name = name.replace('Orders[0]', 'Orders[' + orderIndex + ']');
                            $(this).attr('name', name).val('');
                        }
                    });

                    $('#order-rows').append(newOrderRow);

                    orderIndex++;
                });

                $(document).on('click', '.remove-order-row', function () {
                    if ($('.order-row').length > 1) {
                        $(this).closest('.order-row').remove();
                    }
                });

                $('#topSelectCustomer').change(function () {
                    var selectedCustomer = $(this).val();
                    $('input[name^="Orders"][name$=".CustomerId"]').val(selectedCustomer);
                });

                $('#topSelectOrderDate').change(function () {
                    var selectedDate = $(this).val();
                    $('input[name^="Orders"][name$=".Date"]').val(selectedDate);
                });
            });
        </script>
    }
</body>
</html>