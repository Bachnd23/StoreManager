@model COCOApp.Models.Customer
@{
    ViewBag.Title = "View User Detail";
    Layout = "_LayoutStoreDashBoard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="">
    <meta name="description" content="">

</head>
<body>

    <div class="content">
        <!-- Form Start -->
        <div class="container-fluid pt-4 px-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Customer/ViewList">Danh sách khách hàng</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thông tin khách hàng</li>
                </ol>
            </nav>
            <form id="registerForm" action="" method="post">
                <div class="row">
                    <div class="col">
                        <div>
                            <h4 class="mb-4">Thông tin khách hàng</h4>
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <div class="col-xl-12">
                        <div class="bg-light rounded h-100 p-4">
                            <div class="mb-3">
                                <div class="form-group">
                                    <label for="inputFullName">Full name</label>
                                    <input type="text" name="fullname" class="form-control" id="inputFullName" value="@Model.Name" disabled>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-group">
                                    <label for="inputPhone">Phone number</label>
                                    <input type="text" name="phone" class="form-control" id="inputPhone" value="@Model.Phone" disabled>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-group">
                                    <label for="selectStatus">Status</label>
                                    <select class="form-select" name="status" id="selectStatus" disabled>
                                        @if (Model.Status)
                                        {
                                            <option selected>Active</option>
                                        }
                                        else
                                        {
                                            <option selected>Inactive</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-group">
                                    <label for="inputNote">Note</label>
                                    <input type="text" name="note" class="form-control" id="inputNote" value="@Model.Note" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        <div class="bg-light rounded h-100 p-4 text-center">
                            <a href="@* @Url.Action("EditUser", "User", new { id = Model.Id }) *@" class="btn btn-primary">Edit</a>
                            <a href="@* @Url.Action("ViewUsers", "User") *@" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- Form End -->
    </div>
    <!-- Content End -->
</body>
</html>
