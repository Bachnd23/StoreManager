@model List<COCOApp.Models.Order>
@using COCOApp.Models
@{
    Layout = "_LayoutStoreDashBoard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Summary</title>
</head>
<body>
    <!-- Form Start -->
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Report/ViewCreate">Tạo hóa đơn</a></li>
                <li class="breadcrumb-item active" aria-current="page">Giá hóa đơn</li>
            </ol>
        </nav>
        <form asp-controller="Report" asp-action="CreateInvoice" method="post" id="summaryForm">
            <div class="row bg-light rounded h-100 p-4">
                <div>
                    @if (Model == null || Model.Count == 0)
                    {
                        <p>Không có đơn hàng nào</p>
                    }
                    else
                    {
                        <table class="table table-striped w-100 resultTable">
                            <thead>
                                <tr>
                                    <th scope="col">Mã đơn hàng</th>
                                    <th scope="col">Sản phẩm</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Giá </th>
                                </tr>
                            </thead>
                            <tbody class="resultTableBody">
                                @foreach (Order o in Model)
                                {
                                    <tr>
                                        <td>@o.Id</td>
                                        <td>@o.Product.ProductName</td>
                                        <td>@o.Volume</td>
                                        <td><input type="number" step="0.01" value="@o.Product.Cost"></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <div class="bgrow bg-light rounded h-100 p-4 align-items-center">
                        <button type="submit" class="btn btn-primary">Tạo hóa đơn</button>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
        </form>
    </div>
    <!-- Form End -->
    <!-- Content End -->
    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            // Handle form submission to include all orders and costs
            $('#summaryForm').submit(function (event) {
                // Remove any previous hidden inputs
                $('#summaryForm input[type="hidden"]').remove();

                // Add hidden inputs for all order IDs and costs
                $('.resultTableBody tr').each(function () {
                    var orderId = $(this).find('td:first-child').text(); // Assuming the first column contains the order ID
                    var cost = $(this).find('input[type="number"]').val(); // Assuming cost is input with type number in the same row
                    $('<input>').attr({
                        type: 'hidden',
                        name: 'orderIds',
                        value: orderId
                    }).appendTo('#summaryForm');

                    $('<input>').attr({
                        type: 'hidden',
                        name: 'costs',
                        value: cost
                    }).appendTo('#summaryForm');
                });
            });
        </script>
    }
</body>
</html>
