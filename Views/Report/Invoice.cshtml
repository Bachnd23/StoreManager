@model List<COCOApp.Models.Order>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <!-- Bootstrap CSS link or include -->
    <!-- Other CSS styles for invoice layout -->
    <style>
        /* CSS for invoice layout */
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Invoice</h1>
                <p><strong>Customer Name:</strong> @Model[1].Customer.Name</p>
@*                 <p><strong>Invoice Number:</strong> @Model.o</p> *@
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Product.ProductName</td>
                                <td>@order.Volume</td>
                                <td>@order.OrderProductCost</td>
                                <td>@(order.Volume * order.OrderProductCost)</td> <!-- Calculate total here if needed -->
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-12">
                <button type="button" onclick="window.print()" class="btn btn-primary">Print Invoice</button>
            </div>
        </div>
    </div>
</body>
</html>
